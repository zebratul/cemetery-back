    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^28.1.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.7.0"
  },
  "jest": {
    "testMatch": [
      "**/*.tests.js"
    ],
    "testPathIgnorePatterns": [
      "config"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
